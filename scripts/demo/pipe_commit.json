{
    "eid_type": "PIP",
    "name": "GitHub Commits",
    "ename": "github-commits",
    "description": "Review commits for a repository",
    "task": {
        "op": "sequence",
        "params": {
            "items": [
                {
                    "op": "request",
                    "params": {
                        "url": "https:\/\/api.github.com\/repos\/flexiodata\/docs-api\/commits"
                    }
                },
                {
                    "op": "convert",
                    "params": {
                        "input": {
                            "format": "json"
                        },
                        "output": {
                            "format": "table"
                        }
                    }
                },
                {
                    "op": "calc",
                    "params": {
                        "name": "repository",
                        "expression": "concat(strpart([commit.tree.url],'\/',5),'\/',strpart([commit.tree.url],'\/',6))"
                    }
                },
                {
                    "op": "select",
                    "params": {
                        "columns": [
                            "repository",
                            "commit.author.date",
                            "commit.author.name",
                            "commit.author.email",
                            "commit.committer.name",
                            "commit.committer.email",
                            "commit.message"
                        ]
                    }
                }
            ]
        }
    }
}

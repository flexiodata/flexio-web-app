{
    "name": "Contact Refinement",
    "ename": "contact-refinement",
    "description": "Standardize contact information",
    "task": [
        {
            "type": "flexio.input",
            "description": "Read CSV file from GitHub url",
            "metadata": {
                "connection_type": "http.api"
            },
            "params": {
                "items": [
                    {
                        "path": "https:\/\/raw.githubusercontent.com\/flexiodata\/examples\/master\/contact-refinement\/contacts-ltd1.csv"
                    }
                ]
            }
        },
        {
            "type": "flexio.convert",
            "description": "Convert from CSV to table",
            "params": {
                "input": {
                    "format": "delimited",
                    "delimiter": "{comma}",
                    "header": true
                },
                "output": {
                    "format": "table"
                }
            }
        },
        {
            "type": "flexio.select",
            "description": "Select only the relevant columns",
            "params": {
                "columns": [
                    "givenname",
                    "surname",
                    "streetaddress",
                    "city",
                    "state",
                    "zipcode"
                ]
            }
        },
        {
            "type": "flexio.transform",
            "description": "Make all text uppercase for consistency",
            "params": {
                "columns": [
                    "givenname",
                    "surname",
                    "streetaddress",
                    "city"
                ],
                "operations": [
                    {
                        "operation": "case",
                        "case": "upper"
                    }
                ]
            }
        }
    ]
}

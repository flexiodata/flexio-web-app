// -- hint.css --

// turn off transitions for all hint.css tooltips
[class*=hint--]:after,
[class*=hint--]:before
  transition-duration: 0ms !important

.hint--medium-large:after
  white-space: normal
  line-height: 1.4em
  word-wrap: break-word
  width: 220px

[class*=hint--multiline]:after
  white-space: pre

// [class*=hint--] is position: relative and needs to be overriden
.static[class*=hint--]
  position: static
.absolute[class*=hint--]
  position: absolute
.fixed[class*=hint--]
  position: fixed


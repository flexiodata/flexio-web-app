// -- Flex.io member rights --

.member-rights-disabled
  opacity: .4 !important
  pointer-events: none !important
  user-select: none !important
  //outline: 1px solid black !important

.member-rights-hidden
  display: none !important

// -- Vuebar styles --

.vb
  > .vb-dragger
    margin: 3px
    right: 0
    width: 6px
    z-index: 5

  > .vb-dragger > .vb-dragger-styler
    backface-visibility: hidden
    transition: background-color .15s ease-out, margin .15s ease-out, height .15s ease-out
    background-color: rgba(0,0,0,.1)
    border-radius: 9999px
    height: calc(100% - 6px)
    width: 6px
    display: block

  > .vb-dragger
  > .vb-dragger > .vb-dragger-styler
    min-height: 12px

  > .vb-dragger:hover > .vb-dragger-styler
    background-color: rgba(0,0,0,.5)
    height: calc(100% - 6px)
    margin: 0

.vb.vb-invisible
  > .vb-dragger
  > .vb-dragger > .vb-dragger-styler
    min-height: auto

.vb.vb-scrolling-phantom
  > .vb-dragger > .vb-dragger-styler
    background-color: rgba(0,0,0,.5)

.vb.vb-dragging
  > .vb-dragger > .vb-dragger-styler
    background-color: rgba(0,0,0,.5)
    height: calc(100% - 6px)
    margin: 0

.vb.vb-dragging-phantom
  > .vb-dragger > .vb-dragger-styler
    background-color: rgba(0,0,0,.5)


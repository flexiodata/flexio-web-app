
// fill the containing wrapper element
.CodeMirror
  width: 100%
  height: 100%

// fix the weird choice for a selection color
.CodeMirror-selected
  background: #f0f0f0
.CodeMirror-focused .CodeMirror-selected
  background: #e0e0e0

// CodeMirror placeholder text color
.CodeMirror-empty
  color: #c0c4cc

// CodeMirror lint styles
.CodeMirror-lint-tooltip
  background-color: #ffd
  border: 0
  box-shadow: 0 4px 8px -2px rgba(0, 0, 0, 0.2)
  border-radius: 0; //3px?
  color: #222
  font-family: monospace
  font-size: 13px
  overflow: hidden
  padding: 6px
  position: fixed
  white-space: pre
  white-space: pre-wrap
  z-index: 100
  max-width: 400px
  opacity: 0
  transition: opacity .4s


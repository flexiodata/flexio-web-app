
// -- el-dialog --

.el-dialog
  max-width: 100vw

.el-dialog.no-header
  .el-dialog__body
    padding-top: 20px

 .el-dialog__header
   display: none

.el-dialog.no-footer
  .el-dialog__body
    padding-bottom: 20px

  .el-dialog__footer
    display: none

// -- el-form --

.el-form.el-form-cozy
  .el-form-item
    transition: margin 0.2s ease
    margin-bottom: 15px
    &.is-error
      margin-bottom: 22px

.el-form.el-form-compact
  .el-form-item
    transition: margin 0.2s ease
    margin-bottom: 10px
    &.is-error
      margin-bottom: 22px

.el-input-group__append
.el-input-group__prepend
  padding: 0 15px

// -- el-collapse --

.el-collapse.el-collapse-plain
  border-top-color: transparent
  border-bottom-color: transparent

  .el-collapse-item__header,
  .el-collapse-item__wrap
    border-bottom-color: transparent

.el-collapse-item__content
  line-height: inherit

// -- el-button --

/*
.el-button--micro, .el-button--micro.is-round
  padding: 4px 7px

.el-button--micro
  font-size: 9px
  border-radius: 2px
*/

.el-button--tiny,
.el-button--tiny.is-round
  padding: 5px 9px

.el-button--tiny
  font-size: 12px
  border-radius: 3px

.el-button--tiny+.el-button--tiny
  margin-left: 6px

.el-button--large,
.el-button--large.is-round
  padding: 15px 25px

.el-button--large
  font-size: 16px
  border-radius: 5px

.el-button
  &.b
    font-weight: bold
  &.fw6
    font-weight: 600

.el-input.f5,
.el-select.f5
  .el-input__inner
    font-size: 1rem

// -- el-icon --

[class*=" el-icon-"],
[class^=el-icon-]
  &.b
    font-weight: bold
  &.fw6
    font-weight: 600
  &.el-collapse-item__arrow
    line-height: 48px
    font-weight: 700
